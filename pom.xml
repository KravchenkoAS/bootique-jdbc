<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.nhl.bootique.parent</groupId>
		<artifactId>bootique-parent</artifactId>
		<version>0.10</version>
	</parent>

	<groupId>com.nhl.bootique.jdbc</groupId>
	<artifactId>bootique-jdbc-parent</artifactId>
	<version>0.11-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Parent of JDBC Integration Bundle for Bootique</name>
	<description>
		Parent POM of JDBC and instrumented JDBC Bootique modules.
	</description>

	<modules>
		<module>bootique-jdbc</module>
		<module>bootique-jdbc-instrumented</module>
	</modules>

	<scm>
		<developerConnection>scm:git:ssh://git@github.com/nhl/bootique-jdbc</developerConnection>
		<url>https://github.com/nhl/bootique-jdbc</url>
		<tag>HEAD</tag>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-failsafe-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<!-- Optional profile used to sign artifacts -->
	<profiles>
		<profile>
			<id>gpg</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
